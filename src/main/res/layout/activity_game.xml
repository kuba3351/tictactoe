<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.urz.tictactoe.kkoikrzyyk.com.urz.tictactoe.Game">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/gameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruch gracza:"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/nextMovie"
            android:layout_width="48dp"
            android:layout_height="34dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/gameLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kolko" />

        <TextView
            android:id="@+id/restartLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dotknij ekranu by zagraÄ‡ ponownie"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
